<div class="modal fade" id="shareAlbum" tabindex="-1" role="dialog" aria-labelledby="shareAlbumLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Partager l'album {{ album.title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <input type="hidden" name="album_id" value="{{ album.id }}">
                <button type="submit" class="btn btn-success" class="btn btn-md btn-kitn" name="Envoyer"
                        value="Enregistrer">Partager
                </button>
                {{ form_end(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
