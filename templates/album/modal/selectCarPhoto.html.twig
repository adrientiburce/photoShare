<!-- Modal CAR Photo -->
<div class="modal fade modal-doc" id="carPhotoModal" tabindex="-1" role="dialog" aria-labelledby="carPhotoModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="carPhotoModalLabel">Quel photo avez-vous déposée ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                {% for carPart, carPartPhoto in carPhotos %}
                    <hr>
                    <div class="row">
                    <h3>{{ carPart }}</h3>

                    {% for photoName, photoId in carPartPhoto %}
                        <btn class="btn btn-sm btn-secondary" style="margin: 3px;">{{ photoName }}</btn>
                    {% endfor %}
                    </div>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <span id="photos-selected"></span>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

